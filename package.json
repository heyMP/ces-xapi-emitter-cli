    "license": "Apache-2.0",
    "dependencies": {
        "minimist": "^1.2.0",
        "tincanjs": "^0.50.0"
    },
    "devDependencies": {
        "chai": "^4.1.0",
        "mocha": "^3.5.0"
    }
}
