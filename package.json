{
    "name": "cesxapi",
    "version": "0.0.1",
    "description": "Simple command line tool to test creating xAPI statements following the Church Education System's (CES) xAPI Profile specification.",
    "scripts": {
        "test": "./node_modules/mocha/bin/mocha 'test/**/*.js'",
        "test-debug": "./node_modules/mocha/bin/mocha --debug-brk 'test/**/*.js'",
        "test-coverage": "./node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -- -u exports -R spec 'test/**/*-test.js'"
    },
    "bin": {
        "cesxapi": "./bin/index.js"
    },
